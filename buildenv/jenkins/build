def get_source( String REPO, String BRANCH, Map map = [:] ) {
    stage('Get Source') {
        steps {
            timestamps {
                script {
                    if (fileExists('.git')) {
                        sh "git clean -ffxd"
                    }
                }
                git branch: "$BRANCH", url: "$REPO"
                sh "bash ./get_source.sh"
            }
        }
    }
}

def compile( FREEMARKER, BOOT_JDK ) {
    stage('Compile') {
        steps {
            timestamps {
                sh "bash ./configure --with-freemarker-jar=$FREEMARKER --with-boot-jdk=$BOOT_JDK"
                sh "make all"
            }
        }
    }
}

def java_version( RELEASE ) {
    stage('Java Version') {
        steps {
            timestamps {
                sh "build/$RELEASE/images/jdk/bin/java -version"
            }
        }
    }
}

return this;